{
  "name": "solid-auth0",
  "author": {
    "name": "Mohamed JOUINI",
    "email": "amad3v@gmail.com",
    "url": "https://github.com/amad3v/solid-auth0"
  },
  "description": "Modified port of auth0-react for SolidJS.",
  "private": false,
  "version": "1.0.3",
  "license": "MIT",
  "type": "module",
  "files": [
    "dist"
  ],
  "main": "./dist/index.umd.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    "types": "./dist/index.d.ts",
    "import": "./dist/index.js",
    "require": "./dist/index.umd.cjs"
  },
  "scripts": {
    "dev": "vite",
    "build": "rimraf ./dist && tsc && vite build",
    "lint": "eslint ./src -c eslint.config.js --fix",
    "fmt": "prettier --write \"**/*.{mjs,cjs,js,jsx,ts,tsx,json}\"",
    "lint:fmt": "pnpm fmt && pnpm lint",
    "docs": "typedoc --options ./typedoc.js ./src/index.ts"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "esbuild"
    ]
  },
  "devDependencies": {
    "@eslint/js": "^9.19.0",
    "@types/node": "^22.13.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "eslint": "^9.19.0",
    "eslint-import-resolver-typescript": "^3.7.0",
    "eslint-plugin-simple-import-sort": "^12.1.1",
    "eslint-plugin-solid": "^0.14.5",
    "globals": "^15.14.0",
    "path-browserify": "^1.0.1",
    "prettier": "^3.4.2",
    "pretty-quick": "^4.0.0",
    "rimraf": "^6.0.1",
    "solid-js": "^1.9.4",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3",
    "typescript-eslint": "^8.22.0",
    "vite": "^6.0.11",
    "vite-plugin-dts": "^4.5.0",
    "vite-plugin-eslint": "^1.8.1",
    "vite-plugin-solid": "^2.11.0"
  },
  "peerDependencies": {
    "solid-js": "^1.9.4"
  },
  "dependencies": {
    "@auth0/auth0-spa-js": "^2.1.3"
  }
}
